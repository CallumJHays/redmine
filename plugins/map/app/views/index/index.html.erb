<% html_title "Map" %>

<% content_for :header_tags do %>
    <script type="text/javascript">

//        var url = 'https://bootlessbay.kegsys.com/static/?workpack_id=<%=@workpack_id%>&opened_apps=mapview';
        var url = '<%=@settings['map']['iframe_url']%>/ol3/?workpack_id=<%=@workpack_id%>&opened_apps=mapview&'+
                '&username=<%=User.current.login%>&password=BKBVTF856NLB192KWP__ffdbfdb';
        $(function () {
            $("#content").css({margin: '0px', marginRight: '0px'});

            var isPixelCookers = function(){
                var f = false;
                $("link").each(function(){
                    if ($(this).attr('href').indexOf('pixel-cookers') > -1) {
                       f = true;
                    }
                });

                return f;
            }


            $('html').css({"height": "100%"});
            $('body').css({"height": "100%"});
            var
                    h = $(document.body).outerHeight() - $("#header").outerHeight()-$("#footer").outerHeight(),
                    iframe = document.createElement('iframe');
            $(iframe).attr({
                id: "redmap-iframe",
                src: url,
                allowfullscreen: true,
                mozallowfullscreen: true,
                webkitallowfullscreen: true,
                frameborder: 0,
                width: "100%",
                height: h+"px",
                border: "none"
            });

            $('#content').prepend(iframe).css({
                "border": "none",
                "padding": 0,
                "width": '100%'
            });

            $("a.map").addClass("selected");

            if (isPixelCookers()) {
                $("#main").css({
                    "margin": "0 8px 0 225px",
                    "padding": "55px 0 0 10px"
                });
            } else {
                $("#main").css({
                    "margin": "0",
                    "padding": "0"
                });
            }


            $("#footer").css({
                "margin-top": "5px"
            });


        });
    </script>
<% end %>
